{
    "gui_server" : {
                                 
        "server": {
            "label" : "Server options",     
            "icon" : "server.svg",
            
            "note" : {
                "default" : "These are the <i>Server options</i> and <i>Notifications</i> parameters specifically set for server %SERVER%."
            },
            
            "group" : {
                
                "title" : "Refresh",
                "prefix" : "server.update",
                
                "line" : "autoUpdate",
                "line" : "updateRateInSec",
                "line" : "adaptiveUpdate",
                "note" : {
                    "default": "When enabled the server refresh period is <u>increased at every automatic refresh</u> until the maximum period is reached. If the user in the meantime refreshes the server manually the refresh period is set back to its original value and the whole process starts again."
                },
                "line" : "adaptiveUpdateMode",
                "line" : "adaptiveUpdateIncrementInSec",
                "line" : "maxAdaptiveUpdateRateInMin"
            },
            
            "group" : {                
                "title" : "Fetching files",
                "prefix" : "server.files",
                
                "line" : "readFilesFromDisk",
                "line" : "maxOutputFileLines",
                "line" : "logServerHost",
                "line" : "logServerPort"
             },
             "group" : {
                "title" : "Server load and timeline",
                "prefix" : "server.files",
                "line" : "uidForServerLogTransfer",
                "note" : {
                    "default": "USER is the only shell variable that is substituted for this parameter!"
                },
                "line" : "maxSizeForTimelineData",
                "note" : {
                "default": "0 means there is no upper data limit!"
                }
            },

            "group" : {
                "title" : "Menus",
                "prefix" : "server.menu",

                "line"  : "nodeMenuMode",
                "line"  : "defStatusMenuModeControl"
            },

            "custom-notification" : {
                "title" : "Notifications",               
                "group" : "true",
                
                "row" : {
                    "label" : "Aborted",            
                    "line" : "server.notification.aborted.enabled",
                    "line" : "server.notification.aborted.popup",
                    "line" : "server.notification.aborted.sound"
                  
                },
                "row" : {
                    "label" : "Restarted",                 
                    "line" : "server.notification.restarted.enabled",
                    "line" : "server.notification.restarted.popup",
                    "line" : "server.notification.restarted.sound"                 
                   
                },
                "row" : {
                    "label" : "Late tasks",
                    "line" : "server.notification.late.enabled",                   
                    "line" : "server.notification.late.popup",
                    "line" : "server.notification.late.sound"
                },
                "row" : {
                    "label" : "Zombies",                    
                    "line" : "server.notification.zombie.enabled",
                    "line" : "server.notification.zombie.popup",
                    "line" : "server.notification.zombie.sound"                                       
                },
                 "row" : {
                    "label" : "Restarted or aborted aliases",                    
                    "line" : "server.notification.alias.enabled",
                    "line" : "server.notification.alias.popup",
                    "line" : "server.notification.alias.sound"                                   
                }                                  
            }                              
        }                     
    }
}
